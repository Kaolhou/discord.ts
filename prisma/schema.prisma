generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  user String @id
  cont BigInt
  author String

  @@map("users")
}
model Memes {
  id String @default(uuid()) @id
  name String @unique
  send Boolean @default(false)
  tags String[] @default(["init"])
  nsfw Boolean @default(false)
  manuallySelected Boolean @default(false)

  @@map("memes")
}
model Date{
  id Int @default(autoincrement()) @id
  today DateTime @default(now())
  meme String
  
  @@map("date")
}