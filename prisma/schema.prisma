generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model logs {
  id        String    @id @default(uuid())
  date      DateTime  @default(now())
  isError   Boolean
  authorId  String?      
  command   String?
  error     Json?
//  options   JSON?
}
model conversations{
  messageId       String    @id
  conversationId  String 
  channelId       String
  userID          String
  created_at      DateTime  @default(now())
}
model configGuild {
  guildId               String    @id

  memeAgree             Boolean
  memeEnabled           Boolean
  memeChannel           String?

  addMemberEnabled      Boolean
  addMemberChannel      String?

  deleteMemberEnabled   Boolean
  deleteMemberChannel   String?

}
model Session {
  id        String     @id
  user      User?   @relation(fields: [userId], references: [id])
  userId    Int?
  isLogged  Boolean @default(false)
}
model User {
  id          Int     @id
  userId      Int?
  discordCode String?
  sessions    Session[]
}