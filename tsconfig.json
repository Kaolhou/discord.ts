{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "newLine": "crlf",
    "declaration": true,
    "declarationDir": "./build",
  },
  "ts-node": {
    "esm": true,
    "ignore": [
      "(?:^|/)node_modules/"
    ],
    "transpileOnly": true
  }
}
